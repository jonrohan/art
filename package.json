{
  "name": "art",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "run-p watch:*",
    "watch:js": "nodemon -e ts -x \"rollup -c\"",
    "watch:html": "nodemon -e mustache -x \"node scripts/generate-html.js\"",
    "watch:css": "tailwindcss -i ./lib/page.css -o ./lib/build.css --watch",
    "watch:run": "browser-sync start --server -w index.html sketches/*.html sketches/*.js build.css",
    "clean": "rm index.html sketches/*.js sketches/*.html lib/**/*.{css,js}"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/p5": "^1.7.6",
    "browser-sync": "^3.0.2",
    "glob": "^10.4.1",
    "mustache": "^4.2.0",
    "nodemon": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "p5": "^1.9.0",
    "p5.js-svg": "^1.5.1",
    "rollup": "^4.18.0",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
